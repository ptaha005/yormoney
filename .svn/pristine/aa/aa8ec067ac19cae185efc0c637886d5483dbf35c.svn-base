        <commons-dbcp.version>1.4</commons-dbcp.version>
        <ehcache.version>2.6.6</ehcache.version>
        <hsqldb.version>2.2.9</hsqldb.version>

        <!--AOP-->
        <aspectj.version>1.7.2</aspectj.version>

        <!--Recaptcha-->
