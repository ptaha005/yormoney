        <json.version>1.7.1</json.version>
        <json.codehaus.version>1.9.12</json.codehaus.version>
        <jackson.version>2.2.2</jackson.version>
        <commons-io.version>1.3.2</commons-io.version>
        <mockito.version>1.9.5</mockito.version>

        <!-- Mail -->
