    <artifactId>yormoney</artifactId>
    <packaging>war</packaging>
    <version>1.0</version>
    <name>yormoney Maven Webapp</name>
    <url>http://maven.apache.org</url>

    <repositories>
        <repository>
            <id>Central</id>
            <name>Maven Repository Switchboard</name>
            <url>http://repo1.maven.org/maven2</url>
        </repository>
        <repository>
            <id>SpringRepository</id>
            <name>Springsource GA Repository</name>
            <url>http://repo.springsource.org/release/</url>
        </repository>
        <repository>
            <id>HibernateRepository</id>
            <name>Hibernate Repository</name>
            <url> http://repo1.maven.org/maven2/org/hibernate</url>
        </repository>
    </repositories>

    <properties>
